  <body>
    <!-- nav bar -->
    <nav class="container mx-auto flex items-center justify-between py-4">
      <div>
        <a href="/"
          ><img src="/img/logo.png" alt="logo" class="w-1/2 ml-4"
        /></a>
      </div>
      <div>
        <ul class="flex items-center text-lg">
          <li class="ml-6"><a href="/#menu">Menu</a></li>
          <% if(user) { %>
            <% if(user.role == "admin") { %>
              <li class="ml-6"><a href="/admin/orders">Orders</a></li>
            <% } %>
            <% if(user.role == "customer") { %>
              <li class="ml-6"><a href="/customer/orders">Orders</a></li>
            <% } %>
          
          <li>
          
            <li class="ml-6">
              <form id="logout" action="/logout" method="POST">
                <a onclick="document.getElementById('logout').submit()" href="#">Logout</a>
              </form>
            </li>
            <!-- <a href="/logout">Logout</a> -->
          </li>
          <% } else { %>
          <li class="ml-6"><a href="/register">Register</a></li>
          <li class="ml-6"><a href="/login">Login</a></li>
          <% } %>
          <!-- <% if(true){ %>
            <h1>foo</h1>
          <% } else{ %>  
            <h1>bar</h1>
         <% } %> -->
         <% if(user) { %>
          <% if(user.role == "admin"){ %>
            <li class="ml-6">
              <a
                href="#"
                class="inline-block px-3 py-2 rounded-full flex items-center mr-4"
              >
                <img src="/img/chef.png" alt="logo"
              /></a>
            </li>
            <% } %>
         <% if(user.role == "customer") { %>
          <li class="ml-6">
            <a
              href="/cart"
              class="inline-block px-5 py-3 rounded-full flex items-center mr-4"
            >
              <span id="cartCounter" class="text-white font-bold pr-2"
                ><%= session.cart ? session.cart.totalQty : '' %></span
              >
              <img src="/img/cart.png" alt="logo"
            /></a>
          </li>
          <% } %>
          <% } else{ %>  
            <li class="ml-6">
              <a
                href="/cart"
                class="inline-block px-5 py-3 rounded-full flex items-center mr-4"
              >
                <span id="cartCounter" class="text-white font-bold pr-2"
                  ><%= session.cart ? session.cart.totalQty : '' %></span
                >
                <img src="/img/cart.png" alt="logo"
              /></a>
            </li>
         <% } %>
         
         
         
        </ul>
      </div>
    </nav>
